@page
@model Web.Pages.Inventario.IndexModel
@{
    ViewData["Title"] = "Inventario Escolar";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h1 class="text-center">📦 Inventario Escolar</h1>
    <p class="text-center text-muted">Escuela Antonio José de Sucre</p>

    <hr />

    <!-- Botones principales -->
    <div class="d-flex justify-content-center mb-4">
        <a class="btn btn-primary mx-2" asp-page="Agregar">➕ Registrar Bien</a>
        <a class="btn btn-info mx-2" asp-page="Exportar">⬇️ Exportar a Excel</a>
    </div>

    <!-- Filtros -->
    <div class="card bg-dark text-light shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Buscar Bien</label>
                    <input type="text" name="FiltroTexto" value="@Model.FiltroTexto" class="form-control bg-dark text-light border-secondary"/>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Estado</label>
                    <select name="FiltroEstado" class="form-select bg-dark text-light border-secondary" asp-items="Model.Estados">
                        <option value="">-- Todos --</option>
                    </select>
                </div>

                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-success me-2">🔍 Filtrar</button>
                    <a asp-page="Index" class="btn btn-secondary">❌ Limpiar</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabla dinámica -->
    <h3 class="mt-4">Inventario de Bienes</h3>
    <table class="table table-striped table-bordered table-dark">
        <thead>
            <tr>
                <th>N° de identif.</th>
                <th>Descripción</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Serie</th>
                <th>Estado</th>
                <th>Ubicación</th>
                <th>Modo de Adquisición</th>
                <th>Observaciones</th>
                <th>Observaciones Institucionales</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.inventarios != null && Model.inventarios.Any())
            {
                foreach (var inventario in Model.inventarios)
                {
                    <tr>
                        <td>@inventario.NumeroIdentificacion</td>
                        <td>@inventario.Descripcion</td>
                        <td>@inventario.Marca</td>
                        <td>@inventario.Modelo</td>
                        <td>@inventario.Serie</td>
                        <td>@inventario.Estado</td>
                        <td>@inventario.Ubicacion</td>
                        <td>@inventario.ModoAdquisicion</td>
                        <td>@inventario.Observaciones</td>
                        <td>@inventario.ObservacionesInstitucionales</td>
                        <td>
                            <a class="btn btn-sm btn-warning me-2" asp-page="Editar" asp-route-id="@inventario.Id">✏️ Editar</a>
                            <a class="btn btn-sm btn-danger" asp-page="Eliminar" asp-route-id="@inventario.Id">🗑️ Eliminar</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="11" class="text-center text-muted">
                        No hay registros en el inventario. <a asp-page="Agregar">¿Quieres registrar uno?</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>